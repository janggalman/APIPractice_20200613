<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewTopicDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <ImageView
            android:id="@+id/topicImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!--반투명 검정으로 이미지 깔고 글자가 더 잘보이도록 처리 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#AA000000"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/topicTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="주제 제목 자리" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center" >
                <TextView
                    android:id="@+id/firstSideTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="첫번째 선택지" />

                    <TextView
                        android:id="@+id/firstSideVoteCountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="~표"
                        android:textSize="20sp"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/firstSideVoteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투표하기"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:gravity="center" >

                <TextView
                    android:id="@+id/secondSideTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="두번째 선택지" />

                <TextView
                    android:id="@+id/SecondSideVoteCountTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~표"
                    android:textSize="20sp"
                    android:textColor="@color/white" />

                    <Button
                        android:id="@+id/SecondSideVoteBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투표하기"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>